@model Models.ActivoModel

@{
    ViewData["Title"] = "BorrarActivo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Borrar este Activo</h1>

<h3>Seguro que desea eliminar este activo?</h3>
<div>
    <h4>ActivoModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cod)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cod)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.descrip)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descrip)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.fechaCompra)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fechaCompra)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.caracteris)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.caracteris)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.costo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.costo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.idMetDepre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.idMetDepre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.valorLibros)
