        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.valorLibros)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.depreAcumulada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.depreAcumulada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.codFuncionario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.codFuncionario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.idTipoActivo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.idTipoActivo)
        </dd>
    </dl>
    
    <form asp-action="BorrarActivo">
        <input type="submit" value="BorrarActivo" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
    <br />
    @if (TempData["mensajeError"] != null)
    {
        <div class="alert alert-danger">
            @TempData["mensajeError"]
        </div>
    }
</div>
